<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creatokids.hajwithibraheem.Fragments.AvatarFragment">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_frame"
            android:scaleType="fitXY"
            android:background="@drawable/frame2"
            android:src="@drawable/jack"
            app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_wondering"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/gl_1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/question_mark"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/gl_1"
            app:layout_constraintTop_toBottomOf="@+id/iv_2" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/question_mark"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/iv_3"
            app:layout_constraintStart_toEndOf="@+id/iv_1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="78dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/question_mark"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/gl_4"
            app:layout_constraintTop_toBottomOf="@+id/iv_2" />

        <android.support.constraint.Guideline
            android:id="@+id/gl_4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.82" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
